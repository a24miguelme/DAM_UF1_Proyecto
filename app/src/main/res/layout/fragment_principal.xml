<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fragmentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/ContenedorImagen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ImagenPresentacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/foto_bombillas" />

        <TextView
            android:id="@+id/TituloPresentacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#F6EACB"
            android:background="@color/black"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/LayoutMainBoton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        android:background="#F6EACB">

        <Button
            android:id="@+id/botonComenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡Escoger un tema!"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>
</FrameLayout>